name: hyperopt_example

entry_points:
  train:
    command: "python train.py"
  test:
    command: "python test.py"
  main:
    parameters:
          max_runs: {type: int, default: 10}
          metric: {type: string, default: "f1-intent"}
          algo: {type: string, default: "tpe.suggest"}
          config_template: {type: string, default: "../files/hyperopt/template_config.yml"}
          train_data: {type: string, default: "../files/hyperopt/training_data.yml"}
          validation_data: {type: string, default: "../files/hyperopt/test_data.yml"}
    command: "python main.py
                            --max-runs {max_runs}
                            --metric {metric}
                            --algo {algo}
                             {config_template}
                             {train_data}
                             {validation_data}"
